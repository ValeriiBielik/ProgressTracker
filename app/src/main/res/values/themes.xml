<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProgressTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6750a4</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorPrimaryContainer">#e9ddff</item>
        <item name="colorOnPrimaryContainer">#22005d</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#206c2e</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="colorSecondaryContainer">#a6f5a7</item>
        <item name="colorOnSecondaryContainer">#002106</item>

        <item name="android:statusBarColor">?attr/colorSurfaceVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceVariant</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <item name="colorError">#ba1a1a</item>
        <item name="colorOnError">#ffffff</item>
        <item name="colorErrorContainer">#ffdad6</item>
        <item name="colorOnErrorContainer">#410002</item>

        <item name="android:colorBackground">#fffbff</item>
        <item name="colorOnBackground">#1c1b1e</item>
        <item name="colorSurface">#fffbff</item>
        <item name="colorOnSurface">#1c1b1e</item>

        <item name="colorOutline">#7a757f</item>
        <item name="colorSurfaceVariant">#e7e0eb</item>
        <item name="colorOnSurfaceVariant">#49454e</item>
    </style>

</resources>